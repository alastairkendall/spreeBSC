<input type=hidden name=storeid value=61379>

<table id="cart-detail" data-hook>
  <tbody id="line_items" data-hook>
    <%= order_form.fields_for :line_items do |item_form| %>

<%# debugger %>

      <tr class="<%= cycle('', 'alt') %> line-item">
        <td class="cart-item-description" data-hook="cart_item_description">
          <h4><%= link_to item_form.object.variant.product.name, product_path(item_form.object.variant.product) %></h4>

          <table id="product-properties" class="table-display" data-hook>
            <tbody>
            
              <% @order.special_instructions.split(',').each do |spec| %>
                <% category, value = spec.split('=') %>
                
                <tr>
                  <td><strong><%= category.capitalize %></strong></td>
                  <% if category == "width" || category == "drop" %>
                    <td><%= value + " cm" %></td>
                  <% else %>
                    <td><%= value %></td>
                  <% end %>
                </tr>
              <% end %>
          
              <%= product_image(item_form.object.variant.product, :itemprop => "image") %>

              <img src="/assets/store/pleats/<%= item_form.object.variant.option_value("heading").downcase %>.jpg" />
                  
            </tbody>
          </table>
          <br>
                              
          <input type=hidden name=itemname value='<%= item_form.object.variant.product.name %>'>
          <input type=hidden name=price value=<%= item_form.object.price %>>
          <input type=hidden name=quantity value=<%= item_form.object.quantity %>>

      </tr>
      
    <% end %>
    
  </tbody>
  
</table>
